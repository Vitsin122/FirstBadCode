<Window x:Class="PP4_Project.ConfirmEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PP4_Project"
        mc:Ignorable="d"
        Title="ConfirmEmailWindow" Height="200" Width="350">
    <Grid>
        <Label Content="Код подтверждения" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Height="37" Width="234" FontFamily="Arial Black" FontSize="20"/>
        <TextBox x:Name="ConfirmBox" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Height="31" FontFamily="Arial Black" FontSize="20"/>
        <Button x:Name="Accept" Content="Подтвердить" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Width="82" Click="Accept_Click"/>

    </Grid>
</Window>
